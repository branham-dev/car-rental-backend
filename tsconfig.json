{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "types": [
      "node"
    ],

    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",

		"baseUrl": "src/",
		"paths": {
			"@/*": ["*"],
      "auth/*": ["auth/*"]
		},
  },
  "include": ["src"],
  "exclude": ["node_modules"],
}
